<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewFamilyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Family Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/textViewFamilyName"
        tools:layout_editor_absoluteX="-28dp" />

    <TextView
        android:id="@+id/textViewFamilyLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📍 Location"
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFamilyName" />

    <TextView
        android:id="@+id/textViewFamilyNumOfChildren"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="👶 Number of Children"
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFamilyLocation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFamilyNumOfChildren" />

</androidx.constraintlayout.widget.ConstraintLayout>
